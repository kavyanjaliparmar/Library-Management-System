<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">

    <left>
        <VBox spacing="10" styleClass="sidebar" prefWidth="200" alignment="TOP_LEFT" padding="10">
            <Button text="Home" onAction="#showHome" maxWidth="180"/>
            <Button text="Books" onAction="#showBooks" maxWidth="180"/>
            <Button text="Issue/Return" onAction="#showIssueReturn" maxWidth="180"/>
            <Button text="Reports" onAction="#showReports" maxWidth="180"/>
            <Button text="Logout" onAction="#handleLogout" maxWidth="180"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" padding="15"/>
    </center>

</BorderPane>